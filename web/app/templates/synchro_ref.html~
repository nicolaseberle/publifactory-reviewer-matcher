{% if (data) != -1 %}
{% endif %}

<script type=text/javascript>
  $SCRIPT_ROOT = {{ request.script_root|tojson|safe }};
</script>

<script type=text/javascript>
  $(function() {
    $('input#title').on("change paste keyup", function() {
      var value = ''
      if ($('input[name="title"]').val().length > 5) {
        value = $('input[name="title"]').val()
      }
      $.getJSON($SCRIPT_ROOT + 'api/sync_ref', {
        title: value
      },
      function(data) {
        console.log(data)
        if (data == ""){
          $("#result").html("<p>"+data+"</p>");
        }
        else {
          for (var x = 0; x < data.length; x++){
	    if (x == 0){
	      var auth = ""
	      for (var i = 0; i < data[x].authors.length; i++){
		auth += data[x].authors[i].name
		if (i < data[x].authors.length-1){
		  auth += ", "
		}
		else {
		  auth += " "
		}
	      }
			      
	      $("#result").html("<p>"
		+auth+" "+data[x].title+
	      "</p>");
	    }
	    else {
	      $("#result").append("<p>"+data[x].title+"</p>");
	    }
	  }
	}
      });
      return false;
    });
  });
</script>

</body>
